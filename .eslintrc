{
  "env": {
    "node": true,
    "browser": true,
    "mocha": true
  },
  "rules": {
    "radix": 0,
    "new-cap": 0,
    "max-nested-callbacks": [0, 3],
    "no-new-wrappers": 0,
    "no-sequences": 0,
    "no-var": 0,
    "max-params": [0, 3],
    "max-depth": [0, 2],
    "max-len": [0, 80, 4],
    "strict": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": 0,
    "curly": 0,
    "no-multi-spaces": 0,
    "key-spacing": 0,
    "no-return-assign": 0,
    "consistent-return": 0,
    "no-shadow": 0,
    "no-comma-dangle": 0,
    "no-use-before-define": 0,
    "no-empty": 0,
    "new-parens": 0,
    "no-cond-assign": 0,
    "quotes": 0,
    "no-new-func": 0
  },
  "globals": {
    "performance": true
  }
}
